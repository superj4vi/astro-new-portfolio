---
// Componente modal para mostrar detalles de proyectos
const { open, onClose, title, children } = Astro.props;
---

{
  open && (
    <div
      class="modal-overlay"
      style="position:fixed;top:0;left:0;width:100vw;height:100vh;background:rgba(34,40,49,0.85);z-index:1000;display:flex;align-items:center;justify-content:center;"
    >
      <div
        class="modal-content"
        style="background:#222831;padding:2em 1.5em;border-radius:18px;max-width:500px;width:90%;box-shadow:0 8px 32px 0 rgba(31,38,135,0.37);position:relative;"
      >
        <button
          aria-label="Cerrar"
          style="position:absolute;top:1em;right:1em;background:none;border:none;font-size:1.5em;color:#e94560;cursor:pointer;"
          onclick={onClose}
        >
          &times;
        </button>
        <h2 style="color:#e94560;margin-top:0;">{title}</h2>
        <div>{children}</div>
      </div>
    </div>
  )
}
